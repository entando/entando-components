<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:context="http://www.springframework.org/schema/context"
		xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
				http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">
	
	<bean id="jpcontentworkflowSubMenu" class="com.agiletec.apsadmin.system.plugin.PluginSubMenuContainer" >
		<property name="subMenuFilePath"><value>/WEB-INF/plugins/jpcontentworkflow/apsadmin/jsp/common/template/subMenu.jsp</value></property>
	</bean>
	
	<bean id="jpcontentworkflowAbstractWorkflowAction" abstract="true" 
			class="com.agiletec.plugins.jpcontentworkflow.apsadmin.workflow.AbstractWorkflowAction" 
			parent="abstractBaseAction" >
		<property name="contentManager" ref="jacmsContentManager"/>
		<property name="workflowManager" ref="jpcontentworkflowWorkflowManager"/>
		<property name="roleManager" ref="RoleManager"/>
	</bean>
	
	<bean id="jpcontentworkflowWorkflowListAction" scope="prototype" 
			class="com.agiletec.plugins.jpcontentworkflow.apsadmin.workflow.WorkflowListAction" 
			parent="jpcontentworkflowAbstractWorkflowAction" >
	</bean>
	
	<bean id="jpcontentworkflowWorkflowStepAction" scope="prototype" 
			class="com.agiletec.plugins.jpcontentworkflow.apsadmin.workflow.WorkflowStepAction" 
			parent="jpcontentworkflowAbstractWorkflowAction" >
	</bean>
	
</beans>