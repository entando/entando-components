<!DOCTYPE validators PUBLIC
        "-//Apache Struts//XWork Validator 1.0.2//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.2.dtd">

<validators>

	<field name="siteCode">
		<field-validator type="requiredstring" short-circuit="true">
			<message key="jpcontentscheduler.siteCode.required"/>
		</field-validator>
	</field>

	<field name="globalCat">
		<field-validator type="requiredstring">
			<message key="jpcontentscheduler.globalCat.required"/>
		</field-validator>
	</field>
	<field name="contentIdRepl">
		<field-validator type="requiredstring">
			<message key="jpcontentscheduler.contentIdRepl.required"/>
		</field-validator>
	</field>
	<field name="contentModelRepl">
		<field-validator type="requiredstring">
			<message key="jpcontentscheduler.contentModelRepl.required"/>
		</field-validator>
	</field>


</validators>

