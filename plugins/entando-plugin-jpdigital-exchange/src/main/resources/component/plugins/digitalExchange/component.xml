<?xml version="1.0" encoding="UTF-8"?>
<component>
    <code>jpdigital-exchange</code>
    <description>Entando DigitalExchange Plugin</description>
    <installation>
        <tableMapping>
            <datasource name="portDataSource">
            </datasource>
            <datasource name="servDataSource">
                <class>org.entando.entando.aps.system.init.model.servdb.DigitalExchangeComponentInstallation</class>
            </datasource>
        </tableMapping>
        <environment code="production">
            <defaultSqlResources>
                <datasource name="portDataSource">
                    classpath:sql/plugins/digitalExchange/port_data_production.sql
                </datasource>
            </defaultSqlResources>
        </environment>
        <environment code="test">
            <defaultSqlResources>
                <datasource name="portDataSource">
                    classpath:sql/plugins/digitalExchange/port_data_test.sql
                </datasource>
            </defaultSqlResources>
        </environment>
    </installation>
    <uninstallation>
        <sqlResources>
            <datasource name="portDataSource">
                classpath:sql/plugins/digitalExchange/port_uninstallation.sql
            </datasource>
        </sqlResources>
    </uninstallation>
</component>
