<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>entando-bundles-parent</artifactId>
		<groupId>org.entando.entando.bundles</groupId>
		<version>4.2.0-TP1</version>
		<relativePath>../../pom.xml</relativePath>
	</parent>
	<artifactId>entando-page-bootstrap-hero</artifactId>
	<groupId>org.entando.entando.bundles.pages</groupId>
	<packaging>war</packaging>
	<name>Entando Bundle: entando-page-bootstrap-hero</name>
	<description>Full width layout, inspired by the classic Hero unit example from Twitter Bootstrap. Default Widgets included.</description>
	<developers>
		<developer>
			<id>w.ghelfi</id>
			<name>William Ghelfi</name>
			<email>william@williamghelfi.com</email>
		</developer>
	</developers>
	<url>http://www.entando.com/</url>
	<properties>
		<project.parent.build.directory>../../target</project.parent.build.directory>
		<project.parent.basedir>../..</project.parent.basedir>
	</properties>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>2.3</version><!--$NO-MVN-MAN-VER$ -->
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-enforcer-plugin</artifactId>
				<version>1.0-beta-1</version>
				<executions>
					<execution>
						<id>enforce-versions</id>
						<goals>
							<goal>enforce</goal>
						</goals>
						<configuration>
							<rules>
								<requireMavenVersion>
									<version>2.2.1</version>
								</requireMavenVersion>
								<requireJavaVersion>
									<version>1.6</version>
								</requireJavaVersion>
							</rules>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.entando.entando.bundles.misc</groupId>
			<artifactId>entando-misc-bootstrap</artifactId>
			<version>4.2.0-TP1</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>org.entando.entando.bundles.widgets</groupId>
			<artifactId>entando-widget-language_choose</artifactId>
			<version>4.2.0-TP1</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>org.entando.entando.bundles.widgets</groupId>
			<artifactId>entando-widget-search_form</artifactId>
			<version>4.2.0-TP1</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>org.entando.entando.bundles.widgets</groupId>
			<artifactId>entando-widget-navigation_bar</artifactId>
			<version>4.2.0-TP1</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>org.entando.entando.bundles.widgets</groupId>
			<artifactId>entando-widget-login_form</artifactId>
			<version>4.2.0-TP1</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>org.entando.entando.bundles.contents</groupId>
			<artifactId>entando-content-generic</artifactId>
			<version>4.2.0-TP1</version>
			<type>war</type>
		</dependency>
	</dependencies>
</project>
