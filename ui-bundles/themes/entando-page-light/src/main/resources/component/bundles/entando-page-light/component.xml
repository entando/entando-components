<?xml version="1.0" encoding="UTF-8"?>
<component>
    <code>entando-page-light</code>
    <description>Page: Light layout</description>
    <artifact>
        <artifactId>${project.artifactId}</artifactId>
        <groupId>${project.groupId}</groupId>
        <version>${project.version}</version>
    </artifact>
    <dependencies>
        <!--<code>entando-misc-bootstrap</code>-->
        <code>entando-misc-light</code>
        <code>entando-widget-language_choose</code>
        <code>entando-widget-search_form</code>
        <code>entando-widget-navigation_bar</code>
        <code>entando-widget-login_form</code>
        <code>entando-content-generic</code>
    </dependencies>
    <installation>
        <environment code="production">
            <defaultSqlResources>
                <datasource name="portDataSource">
                    classpath:sql/bundles/entando-page-light/port_data_production.sql
                </datasource>
                <datasource name="servDataSource">
                    classpath:sql/bundles/entando-page-light/serv_data_production.sql
                </datasource>
            </defaultSqlResources>
            <postProcesses>
                <selfRestCall langCode="en" namespace="core" resourceName="i18nlabel"
                              method="POST" expected="200" failonerror="false" printresponse="true" >
                    <contentBody content-type="application/xml" path="classpath:component/bundles/entando-page-light/postprocess/i18n_COPYRIGHT.xml" />
                </selfRestCall>
                <selfRestCall langCode="en" namespace="core" resourceName="i18nlabel"
                              method="POST" expected="200" failonerror="false" printresponse="true" >
                    <contentBody content-type="application/xml" path="classpath:component/bundles/entando-page-light/postprocess/i18n_PORTAL_TITLE.xml" />
                </selfRestCall>
            </postProcesses>
        </environment>
    </installation>
</component>